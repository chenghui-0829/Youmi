<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/default_green" android:state_checked="true">

        <shape>
            <solid android:color="#ccf5e5" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="@color/default_green" />
        </shape>

    </item>

    <item android:color="@color/gray_dark">

        <shape>
            <solid android:color="@color/default_white" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="#cccccc" />
        </shape>

    </item>

</selector>