<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:paddingLeft="10dp"
    android:paddingTop="15dp"
    android:id="@+id/pdt_item"
    >

    <ImageView
        android:id="@+id/pdt_iv"
        android:layout_width="22dp"
        android:layout_height="22dp"
        tools:background="#265" />

    <TextView
        android:id="@+id/pdt_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/pdt_iv"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/default_black"
        android:textSize="14sp"
        tools:text="优秀如你" />

    <TextView
        android:id="@+id/pdt_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pdt_iv"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        android:minWidth="100dp"
        android:textColor="@color/default_orange"
        android:textSize="23sp"
        tools:text="5000" />

    <TextView
        android:id="@+id/pdt_deadlin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/pdt_amount_tv"
        android:layout_alignBottom="@id/pdt_amount_tv"
        android:layout_toRightOf="@+id/pdt_amount_tv"
        android:gravity="center_vertical"
        android:textColor="@color/default_black"
        android:textSize="10sp"
        tools:text="贷款期限      7-21天" />

    <TextView
        android:id="@+id/pdt_limit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pdt_amount_tv"
        android:layout_marginTop="3dp"
        android:minWidth="100dp"
        android:textColor="@color/gray_dark"
        android:textSize="10sp"
        tools:text="最大额度（元）" />

    <TextView
        android:id="@+id/pdt_condition_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pdt_limit_tv"
        android:layout_toRightOf="@+id/pdt_limit_tv"
        android:textColor="@color/gray_dark"
        android:textSize="10sp"
        tools:text="仅用身份证，29w拿回家"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/pdt_apply_tv"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_apply"
        android:gravity="center"
        android:text="立即申请"
        android:textColor="@color/default_white"
        android:textSize="10sp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:background="@mipmap/home_btn_download"
        android:layout_alignParentRight="true"
        tools:text="审核快"
        android:textSize="10sp"
        android:textColor="@color/default_white"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:id="@+id/pdt_tag"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />


</RelativeLayout>